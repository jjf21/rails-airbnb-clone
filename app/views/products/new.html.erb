<div class='container'>
  <h2>Ajouter un mod√®le </h2>
  <%= simple_form_for @product do |f|%>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :description %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.input :date_of_birth, as: :date, start_year: Date.today.year - 70,end_year: Date.today.year - 12, discard_day: true, order: [:month, :year]  %>
    <%= f.input :price %>
    <%= f.input :phone_number %>
    <%= f.input :city %>
    <%= f.input :height %>
    <%= f.input :weight %>
    <%= f.input :shoes %>
    <%= f.input :eyes %>
    <%= f.input :hair %>
    <%= f.submit %>
  <% end %>
</div>

