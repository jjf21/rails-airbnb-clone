<div class='container'>
  <h2>Modifier votre produit </h2>
  <%= simple_form_for @product, html: {id: "form-index"} do |f|%>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :description %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.label :name, 'Date de naissance' %><br>
    <%= f.date_field :date_of_birth, class:'form-control' %>
    <%= f.input :price%>
    <%= f.input :phone_number %>
    <%= f.input :address, input_html: {id: "city"}, label: 'Ville' %>
    <%= f.input :city, as: :hidden, input_html: {id: "city_field"} %>
    <%= f.input :height %>
    <%= f.input :weight %>
    <%= f.input :shoes %>
    <%= f.input :eyes %>
    <%= f.input :hair %>
    <%= f.submit %>
  <% end %> 
</div>

<%= content_for (:after_js) do %>
    <script>
        $( document ).ready(function() {
            $('#form-index').submit(function(){
                 var city = $('#city').val();
                 $('#city_field').val(city);
            });
        });
    </script>
<% end %>