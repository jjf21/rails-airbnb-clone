<div class="container">
  <div class="row" style='margin-top:30px;'>
  <% if @products.count > 0 %>
    <% @products.each do |product| %>
      <div class="col-xs-12 col-sm-4">
        <%= render 'shared/card', product: product %>
        <%= link_to 'Modifier le produit', edit_product_path(product), class:'pull-right' %>
      </div>
    <% end %>
  <% else %>
    <p class='text-center' style='padding:40px 0;'>Vous n'avez aucun produit - <%= link_to 'Ajouter un produit', new_product_path %></p>
  <% end %>

  </div>
</div>